{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}