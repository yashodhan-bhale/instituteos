{
  "name": "instituteos",
  "version": "0.1.0",
  "private": true,
  "description": "InstituteOS - The Oxygen for Institutes",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:generate": "pnpm --filter @instituteos/database run generate",
    "db:push": "pnpm --filter @instituteos/database run push",
    "db:studio": "pnpm --filter @instituteos/database run studio",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.4.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
